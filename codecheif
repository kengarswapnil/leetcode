import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		
		Scanner sc =new Scanner(System.in);
		int N = sc.nextInt();
		
		while(N-->0){
		    
		    int a= sc.nextInt();
		    int b= sc.nextInt();
		    
		    int res = (a%b);
		    
		    System.out.println(res);
		}

	}
}
